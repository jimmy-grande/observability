{
  "name": "@observability/repository",
  "version": "0.0.1",
  "description": "Reusable packages to manage observability",
  "main": "index.js",
  "author": "JIMMY GRANDE <jimmy.grande@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "boot": "yarn prestart && yarn build",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --no-private --stream",
    "check:pkgs": "manypkg check",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "commit": "git-cz",
    "fix:pkgs": "manypkg fix",
    "lint:types": "lerna run lint:types --no-private --stream",
    "lint": "lerna run lint --no-private --stream",
    "pkg": "manypkg run",
    "prestart": "yarn && yarn bootstrap",
    "release": "changeset publish",
    "test": "lerna run test --no-private --stream",
    "version:pkgs": "changeset version"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.14.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-html-reporters": "^2.1.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
