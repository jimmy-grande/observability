{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/",
  "command": {
    "publish": {
      "tempTag": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "ignoreChanges": ["**/*.spec.ts", "**/tests/**", "**/*.md"],
      "message": "chore(release): %s"
    }
  },
  "packages": ["packages/*", "website"]
}
